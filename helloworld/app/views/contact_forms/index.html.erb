<p id="notice"><%= notice %></p>

<h1>Listing Contact Forms</h1>

<table>
  <thead>
    <tr>
      <th>Full name</th>
      <th>Email</th>
      <th>Order num</th>
      <th>Comments</th>
      <th>Subject</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @contact_forms.each do |contact_form| %>
      <tr>
        <td><%= contact_form.full_name %></td>
        <td><%= contact_form.email %></td>
        <td><%= contact_form.order_num %></td>
        <td><%= contact_form.comments %></td>
        <td><%= contact_form.subject %></td>
        <td><%= link_to 'Show', contact_form %></td>
        <td><%= link_to 'Edit', edit_contact_form_path(contact_form) %></td>
        <td><%= link_to 'Destroy', contact_form, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

