<!-- Logic -->

<% status_pending = 1 %>
<% status_active = 2 %>
<% status_deleted = 3 %>

<% status = status_pending %>

<% lists = @subscriptions.select("DISTINCT list").where(:ost_id => status) %>

<!-- Display -->

<p id="notice"><%= notice %></p>

<h2>Lists</h2>

<table>
  <thead>
    <tr>
      <th>List Name</th>
      <th colspan="1"></th>
    </tr>
  </thead>

  <tbody>
   
  <% lists.each do |i| %>

    <% count = "(" + @subscriptions.select("DISTINCT email").where(:list => i.list).where(:ost_id => status).count.to_s + ")" %></td>

    <tr>
      <td>
        <%= i.list %>
      </td>
      <td>
        <%= count %>
      </td>
    </tr>

  <% end %>
  
  

<br>

<h2>Subscriptions</h2>

<table>
  <thead>
    <tr>
      <th>Email</th>
      <th>Name</th>
      <th>List</th>
      <th>Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @subscriptions.each do |subscription| %>
      <tr>
        <td><%= subscription.email %></td>
        <td><%= subscription.name %></td>
        <td><%= subscription.list %></td>
        <td><%= subscription.ost_id %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Subscription', new_subscription_path %>
