<div class="container">

	<div class="row">

	    <div class="col-lg-12">
	        <h1 class="page-header">Teams</h1>
	    </div>
	    
	</div>

	<p><%= link_to "Add new Team", new_team_path %></p>

	<table class="table table-hover">

		<thead>
			<tr>
				<th>#</th>
		        <th>Team</th>
		        <th></th>
		        <th></th>
			</tr>
		</thead>

		<% i=0 %>
		<tbody>

			<% @teams.each do |team| %>
			
				<% i = i + 1 %>

				<tr>
					
					<td>
						<%= "#{i}" %>
					</td>

		        	<td>
		        		<%= team.name %>
		        	</td>

		        	<td><%= link_to "Edit", edit_team_path(team) %></td>

		        	<td><%= link_to "Destroy", team_path(team), method: :delete,data: { confirm: "Are you sure?" } %></td>

				</tr>

			<% end %>

		</tbody>

	</table>
</div>