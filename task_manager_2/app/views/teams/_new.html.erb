<%= stylesheet_link_tag    "custom", media: "all" %>

<div class="row-fluid">
	<div class="col-md-4 well center">

		<%= form_for @team, :html => {:class => "form-horizontal"} do |f| %>
			<% if @team.errors.any? %>
				<div class="alert alert-info" role="alert">
					<span><%= @team.errors.full_messages[0] %></span>
				</div>
			<% end %>

			<fieldset>

				<% if @team.persisted? %>
					<legend>Edit Team</legend>
				<% else%>
					<legend>Create Team</legend>
				<% end %>

				<div class="control-group">	

					<%= f.label :name %><br />

					<div class="controls">
						<%= f.text_field :name, :class => "form-control" %>
					</div>

				</div>

				<div class="form-actions sub">
					<%= f.submit :class => "btn btn-primary" %>
				</div>

			</fieldset>

		<% end %>

	</div>
</div>